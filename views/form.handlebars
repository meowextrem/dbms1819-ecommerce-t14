




<div class="container" style="margin-top: 20pt; margin-bottom: 40pt">
	<div class="row">
		<div class="col-lg-6">
			<div class="container" style="padding: 100pt">
				<img src="/static/{{product_primary_picture}}">
			</div>
		</div>
		<div class="col-lg-6">
			<div style="padding-left: 40pt; padding-top: 100pt">
				<h1>{{product_name}}</h1>
				<label style="margin-bottom: 20pt; font-size: 15pt">Php {{product_price}}</label>
				<p align="justify">{{product_description}}</p>
			</div>
		</div>
		<div class="container">
			<p></p>
		</div>
	</div>
</div>

<div class="form-group" style="margin-right: 150pt; margin-left: 150pt">

	<div style="margin: 0pt 0pt 10pt 0pt">
		<h3>Do you want a custom?</h3>
	</div>
	<form action="/form" method="POST" class="form-inline">
		<div>
			<div class="form-group md-col-5" style="margin: 5px">
				<label>Your Email:</label>
				<input style="margin-left: 30pt; width: 200pt" class="form-control" type="email" name="email" placeholder="Enter your email here">
			</div><br>
			<div class="form-group" style="margin: 5px">
				<label>Address:</label>
				<input style="margin-left: 42pt; width: 330pt" class="form-control" type="text" name="address" placeholder="Enter your address here">
			</div><br>
			<div class="form-group" style="margin: 5px">
				<label>Order Request:</label>
				<textarea style="margin-left: 10pt; width: 330pt; resize: none" class="form-control" rows="4" name="order_request" placeholder=""></textarea>
			</div><br>
			<div class="form-group" style="margin: 5px">
				<input type="submit" class="btn btn-outline-light" name="submit" value="Submit">
			</div>	
		</div>
	</form>
</div>
