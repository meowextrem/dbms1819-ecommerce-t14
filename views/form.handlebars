<div class="banner">
	<a href="/"><img src="/static/logo.png" style="margin-left: 150pt; margin-top: 14pt"></a>
	<a href="/" style="color: black; font-size: 17pt; padding-top: 24pt;margin-right: 175pt" class="pull-right">Home</a>
</div>




<div class="container" style="margin-top: 20pt; margin-bottom: 70pt">
	<div class="row">
		<div class="col-lg-6">
			<img src="/static/{{product_primary_picture}}" style="padding: 100pt">
		</div>
		<div class="col-lg-6">
			<div style="padding-left: 40pt; padding-top: 100pt">
				<h2>{{product_name}}</h2>
				<label style="margin-bottom: 20pt">Php {{product_price}}</label>
				<p align="justify">{{product_description}}</p>
			</div>
		</div>
		<div class="container">
			<p></p>
		</div>
	</div>
</div>

<div class="form-group" style="margin-right: 150pt; margin-left: 150pt">
	<form action="/form" method="POST" class="form-inline">
		<div>
			<div class="form-group md-col-5" style="margin: 5px">
				<label>Your Email:</label>
				<input class="form-control" type="email" name="email" placeholder="Enter your email here">
			</div><br>
			<div class="form-group">
				<label>Quantity:</label>
				<input class="form-control" type="text" name="quantity">
			</div>
			<div class="form-group">
				<input class="form-control" type="textarea" name="text">
			</div>
			<input type="submit" name="submit" value="submit">
		</div>
	</form>
</div>
